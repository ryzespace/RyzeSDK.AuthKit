{
  "ConnectionStrings": {
    "DefaultConnection": "Host=auth-db;Port=5432;Database=Auth;Username=postgres;Password=postgres"
  },
  "Server": {
    "Host": "http://0.0.0.0:8080",
    "Issuer": "https://authkit.local"
  },
  "ServiceDiscovery": {
    "EnableLogging": false,
    "AllowedNamespaces": [
      ".Services",
      ".Interfaces",
      ".Repositories",
      ".Providers",
      ".Managers",
      ".Validators",
      ".Middleware"
    ],
    "ExcludedNamespaces": [
      ".DTO",
      ".Entity",
      ".ValueObject"
    ],
    "AllowedLayers": [
      "Application",
      "Domain",
      "Infrastructure",
      "Host"
    ],
    "SkipInterfaces": true,
    "SkipExceptions": true,
    "Lifetime": "Scoped"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
